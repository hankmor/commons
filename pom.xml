        </repository>
        <repository>
            <id>central</id>
            <name>central</name>
            <url>http://repo1.maven.org/maven2/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>abc-domain</id>
            <name>abc maven server</name>
            <url>https://dev.abcbooking.cn:82/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>alimaven</id>
            <name>aliyun maven</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>central</id>
            <name>central</name>
            <url>http://repo1.maven.org/maven2/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <!--包发布地址定义-->
    <distributionManagement>
        <!--releases版本的jar包发布地址-->
        <repository>
            <id>releases</id>
            <url>https://dev.abcbooking.cn:82/nexus/content/repositories/releases</url>
        </repository>
        <!--snapshots版本的jar包发布地址-->
        <snapshotRepository>
            <id>snapshots</id>
            <url>https://dev.abcbooking.cn:82/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <modules>
        <module>common-util</module>
        <module>common-msoffice</module>
        <module>common-io</module>
        <module>common-mail</module>
        <module>common-lang</module>
        <module>common-json</module>
        <module>common-map</module>
    </modules>

    <prerequisites><!-- just for information: not inherited in child poms -->
        <maven>3.0</maven>
        <!-- prerequisite of some plugins -->
    </prerequisites>

    <!--公用属性定义-->
    <properties>
        <!-- 文件拷贝时的编码 -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- 编译时的编码 -->
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
        <!--kaptcha-->
        <com.google.code.kaptcha.version>2.3.2</com.google.code.kaptcha.version>
        <!--cglib-->
        <net.sf.cglib.version>2.1_3</net.sf.cglib.version>
        <!--log-->
        <slf4j.version>1.7.12</slf4j.version>
        <log4j.version>1.2.14</log4j.version>
        <slf4j-log4j.version>1.7.9</slf4j-log4j.version>
        <!--apache-->
        <org.apache.commons.lang.version>2.6</org.apache.commons.lang.version>
        <org.apache.commons.codec.version>1.10</org.apache.commons.codec.version>
        <org.apache.commons.io.version>2.7</org.apache.commons.io.version>
        <org.apache.commons.beanutils.version>1.9.2</org.apache.commons.beanutils.version>
        <org.apache.commons.cli.version>1.3.1</org.apache.commons.cli.version>
        <org.apache.commons.net.version>3.4</org.apache.commons.net.version>
        <org.apache.commons.fileupload.version>1.3.1</org.apache.commons.fileupload.version>
        <org.apache.commons.email.version>1.5</org.apache.commons.email.version>
        <org.apache.commons.exec.version>1.3</org.apache.commons.exec.version>
        <org.apache.commons.collections.version>3.2.2</org.apache.commons.collections.version>
        <org.apache.commons.validator.version>1.5.0</org.apache.commons.validator.version>
        <org.apache.commons.math.version>3.6</org.apache.commons.math.version>
        <org.apache.commons.compress.version>1.10</org.apache.commons.compress.version>
        <commons-pool.version>1.5.5</commons-pool.version>
        <commons-chain.version>1.1</commons-chain.version>
        <commons-cli.version>1.0</commons-cli.version>
        <!--json-->
        <gson.version>2.0</gson.version>
        <fastjson.version>1.2.8</fastjson.version>
        <jackson.version>1.9.3</jackson.version>
        <!-- wro4j compression -->
        <jdk.version>1.8</jdk.version>
        <!--junit-->
        <junit.version>4.8.2</junit.version>
        <com.belerweb.pinyin4j.version>2.5.0</com.belerweb.pinyin4j.version>
        <org.quartz.version>2.2.2</org.quartz.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--junit-->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.8.2</version>
                <scope>test</scope>
            </dependency>
            <!--kaptcha-->
            <dependency>
                <groupId>com.google.code</groupId>
                <artifactId>kaptcha</artifactId>
                <version>${com.google.code.kaptcha.version}</version>
            </dependency>
            <!--cglib-->
            <dependency>
                <groupId>net.sf.cglib</groupId>
                <artifactId>cglib-nodep.osgi</artifactId>
                <version>${net.sf.cglib.version}</version>
            </dependency>
            <!--slf4j-->
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${slf4j.version}</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
